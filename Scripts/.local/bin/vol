#!/usr/bin/env fish

# exec
switch "$argv[1]"
        case "up"
	    pamixer -i 5
            notify-send "ðŸ”Š  "(pamixer --get-volume-human)
	case "down"
	    pamixer -d 5
            notify-send "ðŸ”‰  "(pamixer --get-volume-human)
	case "toggle"
	    pamixer -t
            notify-send "ðŸ”ˆ  "(pamixer --get-volume-human)
	case "*"
