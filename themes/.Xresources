!#####
!# X #
!#####

! X config
Xcursor.size: 2

!##########
!# COLORS #
!##########

!! black
*color0:  #070707
*color8:  #1a1a1a

!! red
*color1:  #efa6a2
*color9:  #e0af85

!! green
*color2 : #80c990
*color10: #5accaf

!! yellow
*color3:  #a69460
*color11: #c8c874

!! blue
*color4:  #a3b8ef
*color12: #ccaced

!! magenta
*color5:  #e6a3dc
*color13: #f2a1c2

!! cyan
*color6:  #50cacd
*color14: #74c3e4

!! white
*color7:  #808080
