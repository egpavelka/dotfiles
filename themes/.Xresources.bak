! X config
Xcursor.size: 2
URxvt.iconFile: /home/gigi/.icons/Xenlism-Wildfire/Apps

! fonts
Xft.antialias:          1
Xft.hinting:            1
Xft.hintstyle:          hintfull
Xft.lcdfilter:          lcddefault
Xft.rgba:               rgb

*URxvt.font:		xft:Fira Code:size=11
URxvt.boldFont:         xft:Fira Code Bold:size=11
!URxvt.lineSpace:	10
!URxvt.letterSpace:	0


! scrollbar
URxvt.scrollBar:	false
URxvt.scrollBar_right:	true
URxvt.scrollstyle: 	plain
URxvt.thickness:	0

! padding
URxvt.internalBorder:	25

! transparency
urxvt*transparent: true
urxvt*shading: 30